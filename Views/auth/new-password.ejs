<%- include('../includes/head')  %>
    <link rel="stylesheet" href="/css/auth-forms.css">
</head>
<body>
    <%- include('../includes/navigation') %>
    <div class="container">
        <h1>Set New Password</h1>

        <% if (errorMessage) { %>
            <div class="error-wrap">
                <p class="error-message">
                    <%= errorMessage %>
                </p>
            </div>
        <% } %>

        <form action="/set-password" method="post">
            <input type="hidden" name="userId" value="<%= userId %>">
            <input type="hidden" name="token" value="<%= token %>">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            
            <div class="form-group">
                <label for="password">New Password:</label>
                <input type="password" id="password" name="password" required
                value="<%= prevData.password %>"
                class="<%= validationErrors.find(element=>element.path === 'password') ? 'input-invalid' : '' %>">
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirm Password:</label>
                <input type="password" id="confirmPassword" name="confirmPassword" required
                class="<%= validationErrors.find(element=>element.path === 'confirmPassword') ? 'input-invalid' : '' %>">
            </div>

            <button type="submit">Set Password</button>
        </form>
    </div>
<%- include('../includes/end') %>
