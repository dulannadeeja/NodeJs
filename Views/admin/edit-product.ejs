<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/auth-forms.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <div class="container">
            <h1><% if(editing) { %> Edit Product <% } else { %> Add Product <% } %></h1>

        <% if(validationErrors) { %>
            <div class="errors-wrapper">
                <% validationErrors.forEach(error => { %>
                    <div class="error-wrap">
                        <p class="error-message"><%= error.msg %></p>
                    </div>
                <% }) %>
            </div>
        <% } %>

        <form class="product-form" action="<% if(editing) { %> /admin/edit-product <% } else { %> /admin/add-product <% } %>" method="POST" enctype="multipart/form-data">

            <% if(editing) { %>
                <input type="hidden" name="productId" value="<%=product._id%>">
            <% } %>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if(product) { %> <%= product.title %> <% } %>"
                class="<%= validationErrors.find(element => element.path === 'title') ? 'input-invalid' : ''  %>">
            </div>
            <div class="form-group">
                <% if(editing) { %>
                    <div class="product-image-wrap">
                        <img src="/<%= product.imageUrl ? product.imageUrl : '' %>" alt="<%= product.title %>">
                    </div>
                <% } %>
                <label for="productImage">Image URL</label>
                <input type="file" name="productImage" id="productImage" >
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<% if(product) { %><%=product.price%><% } %>"
                class="<%= validationErrors.find(element => element.path === 'price') ? 'input-invalid' : ''  %>">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"
                class="<%= validationErrors.find(element => element.path === 'description') ? 'input-invalid' : ''  %>"
                ><% if(product) { %> <%= product.description %> <% } %></textarea>
            </div>
            <button class="btn" type="submit"> <% if(editing) { %> Update Product <% } else { %> Add Product <% } %></button>
        </form>
        </div>
    </main>
<%- include('../includes/end.ejs') %>